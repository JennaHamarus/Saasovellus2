@page "/fetchdata"
@inject HttpClient Http

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>


<form action="/fetchdata">
    <label for="fname">Sijainti</label>
    <input type="text" @bind="location" />
    <br><br>
    <input type="submit" value="Submit" @onclick="GetCoords">
</form>

@if (forecast == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @* Jos on objekti, tehää taulukko *@
    int luku = 0;
    string kuvaus;
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in forecast.days[0].hours)
            {
                if (item.temp < 0)
                {
                    kuvaus = "kylmä";
                    if (item.temp < -10)
                    {
                        kuvaus = "vitun kylmä";
                    }
                }
                else
                {
                    kuvaus = "kuuma";
                    if (item.temp > 10)
                    {
                        kuvaus = "vitun kuuma";
                    }
                }
                <tr>
                    <td>@(item.datetime)</td>
                    <td>@((int)item.temp) °C</td>
                    <td>@((int)item.temp) F</td>
                    <td>@kuvaus</td>
                </tr>
                luku++;
            }
        </tbody>
    </table>
}

